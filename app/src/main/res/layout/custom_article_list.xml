<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/article_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:src="@color/primaryColor"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"/>
        <TextView
            android:id="@+id/article_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:layout_toEndOf="@+id/article_image"
            android:layout_toRightOf="@+id/article_image"
            android:layout_margin="15dp"
            android:textStyle="bold"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/article_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/grid_detail"
            android:layout_alignStart="@+id/article_title"
            android:layout_alignLeft="@+id/article_title"
            android:layout_below="@+id/article_title"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/txtArticleID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_alignStart="@+id/article_content"
            android:layout_alignLeft="@+id/article_content"
            android:layout_below="@+id/article_content"
            android:textColor="@color/white"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>