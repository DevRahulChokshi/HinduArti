<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputKundaliUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/editKundaliUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_UserName"
            android:inputType="text"
            android:padding="10dp"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputKundaliBirthPlace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@+id/inputKundaliUserName">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/editKundaliBirthPlace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_Birth_Place"
            android:inputType="text"
            android:padding="10dp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputKundaliDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@+id/inputKundaliBirthPlace">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/editKundaliBirthDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_Birth_Date"
            android:inputType="text"
            android:padding="10dp"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputKundali"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@+id/inputKundaliBirthPlace">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/editKundali"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_Birth_Date"
            android:inputType="text"
            android:padding="10dp"/>
    </android.support.design.widget.TextInputLayout>


</android.support.constraint.ConstraintLayout>