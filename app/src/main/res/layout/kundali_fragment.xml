<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/kundali_frag"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:layout_margin="10dp">
    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputKundaliUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/editKundaliUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_UserName"
            android:inputType="text"
            android:drawableRight="@drawable/ic_outline_person"
            android:drawableEnd="@drawable/ic_outline_person"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:padding="10dp"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputKundaliBirthPlace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@+id/inputKundaliUserName">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/editKundaliBirthPlace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_Birth_Place"
            android:inputType="text"
            android:drawableRight="@drawable/ic_outline_location_on"
            android:drawableEnd="@drawable/ic_outline_location_on"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:padding="10dp" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputKundaliDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@+id/inputKundaliBirthPlace">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/editKundaliBirthDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_outline_calendar_today"
            android:drawableEnd="@drawable/ic_outline_calendar_today"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:hint="@string/hint_Birth_Date"
            android:onClick="onDialogCalender"
            android:inputType="text"
            android:padding="10dp"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputKundaliTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@+id/inputKundaliDate">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/editKundaliTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_Birth_Time"
            android:drawableRight="@drawable/ic_baseline_access_time"
            android:drawableEnd="@drawable/ic_baseline_access_time"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:inputType="text"
            android:padding="10dp"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabKundali"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/primaryColor"
        android:src="@drawable/ic_baseline_done"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</android.support.constraint.ConstraintLayout>